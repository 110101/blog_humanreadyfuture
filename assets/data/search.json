---
---
[

   {% for post in site.posts %}
      {
        {% assign date_format = site.date_format | default: "%d %b %Y" %}
        "title"    : "{{ post.title | escape }}",
        "category" : "{{ post.category }}",
        "tags"     : "{{ post.tags | join: ', ' | prepend: " " }}",
        "url"      : "{{ post.url | relative_url }}",
        "date"     : "{{ post.date |  date: '%Y' }}",
        "excerpt"  : {{ post.content | truncate: '10' | strip_html | escape | jsonify }},
        "content"  : {{ post.content | strip_html | escape | jsonify }}
      } {% unless forloop.last %},{% endunless %}
   {% endfor %}
   {% if site.portfolio.size > 0 %},{% endif %}
   {% for page in site.portfolio %}
     {
       {% if page.title != nil %}
          "title"    : "{{ page.title | escape }}",
          "category" : "{{ page.category }}",
          "tags"     : "{{ page.tags | join: ', ' | prepend: " " }}",
          "url"      : "{{ page.url | relative_url }}",
          "date"     : "{{ post.date | date: '%Y' }}",
          "excerpt"  : {{ page.content | truncate: '30' | jsonify }},
          "content"  : {{ page.content | truncate: '300' | jsonify }}
       {% endif %}
     } {% unless forloop.last %},{% endunless %}
   {% endfor %}
]
